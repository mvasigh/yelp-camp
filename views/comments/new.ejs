<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center" class="mb-4 mt-4">Write a New Comment for <%= campground.name %></h1>
  <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="comment[text]" placeholder="Your comment">
    </div>
    <div class="form-group">
      <button class="btn btn-md btn-primary btn-block">Submit</button>
    </div>
  </form>
  <a href="/campgrounds/<%= campground._id %>">Go back</a>
</div>

<% include ../partials/footer %>