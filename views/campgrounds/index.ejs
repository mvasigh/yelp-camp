<% include ../partials/header %>

<div class="container">
<div class="jumbotron mt-4">
  <h1 class="display-4">Welcome to YelpCamp</h1>
  <p class="lead">View our hand-picked campgrounds from all over the world.</p>
  <hr class="my-4">
  <p>Be a part of our awesome community of campers!</p>
  <p class="lead">
    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add Campground</a>
  </p>
</div>

<div class="row">
<div class="col">
<h3 class="mb-3">Our most popular campgrounds:</h3>
</div>
</div>
<div class="row">
<% campgrounds.forEach(campground => { %>
  <div class="col-sm-12 col-md-6 col-lg-4 mb-3">
    <div class="card">
      <img class="card-img-top" src="<%= campground.image %>" alt="<%= campground.name %>">
      <div class="card-body">
        <h5 class="card-title"><%= campground.name %></h5>
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
      </div>
    </div>
  </div>
<% }); %>
</div>
</div>
<% include ../partials/footer %>