<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center" class="mb-4 mt-4">Create a new campground</h1>
  <form action="/campgrounds" method="POST">
    <div class="form-group">
      <input class="form-control" type="text" name="campground[name]" placeholder="Campground Name">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="campground[image]" placeholder="Image URL">
    </div>
    <div class="form-group">
      <input class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.01" step="0.01">
    </div>
    <div class="form-group">
      <input class="form-control" type="text" name="campground[description]" placeholder="Camp Description">
    </div>
    <div class="form-group">
      <button class="btn btn-md btn-primary btn-block">Submit</button>
    </div>
  </form>
  <a href="/campgrounds">Go back</a>
</div>

<% include ../partials/footer %>